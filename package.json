{
  "name": "@becode/bookshelf",
  "version": "0.0.1",
  "description": "A simple bookshelf/library manager, for our internal usage<Paste>",
  "author": "leny <leny@becode.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "npx eslint --fix --cache --ignore-pattern 'docs/*' src",
    "build:server": "npx babel src/server -s --out-dir bin/server",
    "work:bitch": "npx babel src/server -s --watch --verbose --out-dir bin/server",
    "build:client": "npx webpack --progress --profile --colors",
    "work:client": "npx webpack-dev-server --env=dev --hot --progress",
    "build": "npm run build:server && npm run build:client",
    "start": "node bin/server/index.js"
  },
  "engines": {
    "node": "11.8"
  },
  "lint-staged": {
    "*.js": [
      "npx eslint --fix --cache",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.2",
    "css-loader": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.1",
    "lint-staged": "^8.1.3",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.14",
    "@fortawesome/free-solid-svg-icons": "^5.7.1",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "axios": "^0.18.0",
    "babel-loader": "^8.0.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "bulma": "^0.7.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "install": "^0.12.2",
    "jwt-simple": "^0.5.1",
    "mongoose": "^5.4.9",
    "node-localstorage": "^1.3.1",
    "node-pre-gyp": "^0.12.0",
    "node-sass-chokidar": "^1.3.4",
    "react": "^16.8.1",
    "react-bulma-components": "^2.3.0",
    "react-dom": "^16.8.1",
    "react-modal": "^3.8.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
